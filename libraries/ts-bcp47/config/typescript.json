{
  "$schema": "https://developer.microsoft.com/json-schemas/heft/v0/typescript.schema.json",

  /**
   * Configures additional file types that should be copied into the TypeScript compiler's emit folders.
   * Note: IANA data is now embedded in TypeScript modules and no longer requires separate files.
   */
  "staticAssetsToCopy": {
    "excludeGlobs": ["**/data/iana/**"],
    "fileExtensions": [".json"]
  }
}
