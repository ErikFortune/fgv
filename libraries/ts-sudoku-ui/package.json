  "author": "Erik Fortune",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ErikFortune/fgv/issues"
  },
  "homepage": "https://github.com/ErikFortune/fgv/tree/main/libraries/ts-sudoku-ui#readme",
  "dependencies": {
    "@fgv/ts-sudoku-lib": "workspace:*",
    "@fgv/ts-utils": "workspace:*",
    "@fgv/ts-json-base": "workspace:*",
    "tslib": "^2.8.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@fgv/heft-dual-rig": "workspace:*",
    "@fgv/ts-utils-jest": "workspace:*",
    "@types/react": "~19.2.2",
    "@types/react-dom": "~19.2.2",
    "react": "~19.2.0",
    "react-dom": "~19.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "@testing-library/react": "^16",
    "@testing-library/user-event": "^14.6.1",
    "@testing-library/jest-dom": "^6.4.2",
    "rimraf": "^6.1.0",
    "ts-jest": "^29.4.5",
    "typescript": "5.9.3",
    "@rushstack/heft": "1.1.3",
    "@rushstack/heft-web-rig": "1.1.5",
    "@rushstack/eslint-config": "4.5.3",
    "@rushstack/heft-jest-plugin": "1.1.3",
    "@microsoft/api-documenter": "^7.27.3",
    "@microsoft/api-extractor": "^7.53.3",
    "@testing-library/dom": "^10.4.0",
    "tailwindcss": "^3.4.0",
    "postcss": "~8.5.6",
    "autoprefixer": "~10.4.21"
  },
  "exports": {
    ".": {
      "node": {
        "import": "./lib/index.js",
        "require": "./lib/index.js"
      },
      "default": {
        "import": "./lib/index.browser.js",
        "require": "./lib/index.browser.js"
      },
      "types": "lib/index.d.ts"
    }
