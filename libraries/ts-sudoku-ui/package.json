{
  "name": "@fgv/ts-sudoku-ui",
  "version": "5.1.0",
  "description": "React components for interactive Sudoku puzzle entry and display",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "heft build --clean",
    "build-docs": "api-documenter markdown --input-folder ./temp --output-folder docs",
    "build-all": "rushx build && rushx build-docs",
    "clean": "heft clean",
    "test": "heft test --clean",
    "lint": "eslint src --ext .ts,.tsx",
    "fixlint": "eslint src --ext .ts,.tsx --fix",
    "coverage": "jest --coverage"
  },
  "sideEffects": false,
  "keywords": [
    "typescript",
    "react",
    "components",
    "sudoku",
    "puzzle",
    "ui",
    "entry"
