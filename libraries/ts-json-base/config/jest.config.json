{
  "coveragePathIgnorePatterns": ["index.js", "public.js"],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.d.ts",
    "!src/**/index.ts",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts"
  ],
  "coverageReporters": ["text", "lcov", "html"],
  "coverageProvider": "babel",
  "testMatch": ["**/src/**/?(*.)+(spec|test).[tj]s?(x)"],
  "testPathIgnorePatterns": ["/node_modules/", "/lib/", "/dist/"]
}
