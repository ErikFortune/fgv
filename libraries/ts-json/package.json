{
  "name": "@fgv/ts-json",
  "version": "1.9.6",
  "description": "Typescript utilities for working with JSON",
  "main": "dist/index.js",
  "scripts": {
    "build": "heft test --clean",
    "clean": "heft clean",
    "test": "heft test",
    "build-docs": "api-documenter markdown --input-folder ./temp --output-folder docs",
    "build-all": "rushx build; rushx build-docs",
    "test-handles": "jest --runInBand --detectOpenHandles",
    "clean-jest": "jest --clear-cache",
    "coverage": "jest --coverage --no-cache",
    "lint": "eslint src --ext .ts",
    "fixlint": "eslint src --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DidjaRedo/ts-json.git"
  },
  "keywords": [
    "typescript",
    "json"
  ],
  "author": "Erik Fortune",
  "license": "MIT",
  "devDependencies": {
    "@fgv/ts-utils": "workspace:*",
    "@fgv/ts-utils-jest": "workspace:*",
    "@types/jest": "^29.5.0",
    "@types/mustache": "^4.2.2",
    "@types/node": "^18.15.10",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "jest-extended": "^3.2.4",
    "mustache": "^4.2.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "eslint-plugin-n": "^15.0.0",
    "@rushstack/heft-node-rig": "~1.12.6",
    "@rushstack/heft": "~0.50.0",
    "heft-jest": "~1.0.2",
    "@types/heft-jest": "1.0.3"
  },
  "peerDependencies": {
    "@fgv/ts-utils": "^1.9.3",
    "mustache": "^4.2.0"
  }
}
