{
  "extends": "@rushstack/heft-node-rig/profiles/default/config/jest.config.json",
  "coveragePathIgnorePatterns": ["index.ts", "public.ts", "internal.ts"],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "collectCoverage": true,
  "collectCoverageFrom": ["src/packlets/**/*.ts", "!src/test/**/*.ts"],
  "coverageReporters": ["text", "lcov", "html"]
}
