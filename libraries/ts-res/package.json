{
  "name": "@fgv/ts-res",
  "version": "5.0.2-0",
  "description": "Multi-dimensional Resource Runtime",
  "main": "lib/index.js",
  "types": "dist/ts-res.d.ts",
  "scripts": {
    "build": "heft build --clean",
    "clean": "heft clean",
    "test": "heft test --clean",
    "test-ts-res": "heft test --clean",
    "build-docs": "api-documenter markdown --input-folder ./temp --output-folder docs",
    "build-all": "rushx build; rushx build-docs",
    "test-handles": "heft test --detect-open-handles",
    "clean-jest": "heft test --clean",
    "coverage": "heft test --clean --max-workers 1 --detect-open-handles",
    "lint": "eslint src --ext .ts",
    "fixlint": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "resource",
    "internationalization",
    "globalization",
    "i18n"
  ],
  "author": "Erik Fortune",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ErikFortune/fgv/issues"
  },
  "homepage": "https://github.com/ErikFortune/fgv/tree/main/libraries/ts-res#readme",
  "sideEffects": false,
  "devDependencies": {
    "@fgv/heft-dual-rig": "workspace:*",
    "@fgv/ts-utils-jest": "workspace:*",
    "@microsoft/api-documenter": "^7.27.3",
    "@microsoft/api-extractor": "^7.53.3",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "5.9.3",
    "eslint-plugin-n": "^17.23.1",
    "@rushstack/eslint-config": "4.5.3",
    "@rushstack/heft": "1.1.3",
    "@rushstack/heft-jest-plugin": "1.1.3",
    "@rushstack/heft-node-rig": "2.11.4",
    "@types/heft-jest": "1.0.6",
    "@fgv/ts-extras": "workspace:*",
    "eslint-plugin-tsdoc": "~0.4.0"
  },
  "dependencies": {
    "@fgv/ts-utils": "workspace:*",
    "@fgv/ts-json-base": "workspace:*",
    "@fgv/ts-bcp47": "workspace:*",
    "@fgv/ts-json": "workspace:*",
    "luxon": "^3.7.2",
    "fflate": "~0.8.2"
  },
  "exports": {
    ".": {
      "node": {
        "import": "./lib/index.js",
        "require": "./lib/index.js"
      },
      "default": {
        "import": "./lib/index.browser.js",
        "require": "./lib/index.browser.js"
      },
      "types": "dist/ts-res.d.ts"
    }
  }
}
